# 17yotk MC Server - Donation System Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==================================
# Server Configuration
# ==================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ==================================
# Database Configuration
# ==================================
# MongoDB (Primary)
MONGODB_URI=mongodb://localhost:27017/17yotk_donations

# MySQL (Alternative)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=17yotk_donations

# ==================================
# Payment Processors
# ==================================

# Stripe (International cards)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Robokassa (Popular in Russia)
ROBOKASSA_LOGIN=your_robokassa_merchant_login
ROBOKASSA_PASSWORD1=your_robokassa_password1
ROBOKASSA_PASSWORD2=your_robokassa_password2

# YooMoney (Yandex.Money)
YOOMONEY_SHOP_ID=your_yoomoney_shop_id
YOOMONEY_SECRET_KEY=your_yoomoney_secret_key

# QIWI
QIWI_PUBLIC_KEY=your_qiwi_public_key
QIWI_SECRET_KEY=your_qiwi_secret_key

# CoinPayments (Cryptocurrency)
COINPAYMENTS_MERCHANT_ID=your_coinpayments_merchant_id
COINPAYMENTS_PUBLIC_KEY=your_coinpayments_public_key
COINPAYMENTS_PRIVATE_KEY=your_coinpayments_private_key
COINPAYMENTS_IPN_SECRET=your_coinpayments_ipn_secret

# SBP (Fast Payment System)
SBP_BANK_ID=your_sbp_bank_id
SBP_MERCHANT_ID=your_sbp_merchant_id
SBP_API_KEY=your_sbp_api_key

# ==================================
# Minecraft Server Integration
# ==================================
MC_HOST=localhost
MC_PORT=25565
MC_RCON_PORT=25575
MC_RCON_PASSWORD=your_secure_rcon_password

# Minecraft Database (for permissions)
MC_DB_HOST=localhost
MC_DB_PORT=3306
MC_DB_USER=minecraft
MC_DB_PASSWORD=your_minecraft_db_password
MC_DB_NAME=luckperms

# ==================================
# Security & Authentication
# ==================================
JWT_SECRET=your_super_secret_jwt_key_change_this_to_random_string
ENCRYPTION_KEY=your_32_character_encryption_key_here
MC_API_KEY=your_minecraft_api_key_for_internal_requests
ADMIN_API_KEY=your_admin_panel_api_key

# ==================================
# Notifications
# ==================================

# Discord Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_DONATIONS_WEBHOOK=https://discord.com/api/webhooks/donations_channel
DISCORD_ERRORS_WEBHOOK=https://discord.com/api/webhooks/errors_channel

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notifications
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=noreply@17yotk.ru

# ==================================
# Analytics & Tracking
# ==================================
GA_TRACKING_ID=G-XXXXXXXXXX
YM_COUNTER_ID=12345678

# ==================================
# External Services
# ==================================

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Sentry (Error tracking)
SENTRY_DSN=https://your_sentry_dsn

# ==================================
# Development Settings
# ==================================
LOG_LEVEL=debug
DEBUG_MODE=true

# ==================================
# SSL & Security Headers
# ==================================
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ==================================
# Rate Limiting
# ==================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# File Upload
# ==================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==================================
# Backup Configuration
# ==================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==================================
# Monitoring
# ==================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090